{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "attributes"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "required": [
              "paymentAmount",
              "paymentDate",
              "paymentMethod",
              "paymentBank",
              "paymentAccount"
            ],
            "properties": {
              "paymentAmount": {
                "type": "string"
              },
              "paymentDate": {
                "type": "string"
              },
              "paymentMethod": {
                "type": "string"
              },
              "paymentBank": {
                "type": ["string", "null"]
              },
              "paymentAccount": {
                "type": ["string", "null"]
              }
            }
          }
        }
      }
    }
  }
}