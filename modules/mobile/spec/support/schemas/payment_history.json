{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "data"
  ],
  "properties": {
    "data": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "attributes"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "attributes": {
            "type": "object",
            "required": [
              "amount",
              "date",
              "method",
              "bank",
              "account"
            ],
            "properties": {
              "amount": {
                "type": "string"
              },
              "date": {
                "type": "string"
              },
              "method": {
                "type": "string"
              },
              "bank": {
                "type": ["string", "null"]
              },
              "account": {
                "type": ["string", "null"]
              }
            }
          }
        }
      }
    }
  }
}