<h2><span class="title">Faulty <%= appeal_name %></span></h2>
<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>GUID</th>
      <th>Consumer</th>
      <th>Status</th>
      <th>Code</th>
      <th>Detail</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
  </thead>
  <tbody>
    <% faulty_appeals.each do |appeal| %>
    <tr>
      <td><%= appeal_name %></td>
      <td class="right-align"><%= appeal.id %></td>
      <td class="right-align"><%= appeal.source %></td>
      <td class="right-align"><%= appeal.status %></td>
      <td class="right-align"><%= appeal.code %></td>
      <td class="right-align"><%= appeal.detail %></td>
      <td class="right-align"><%= appeal.created_at %></td>
      <td class="right-align"><%= appeal.updated_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
